<section>
<h1>Burgers Ready to Eat</h1>

<ul>
{{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>
</section>

<section>
<h1>Burgers Eaten</h1>

<ul>
{{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>
</section>

<section>
  <form>
    <input>
    <button>Create New Burger</button>
  </form>
</section>