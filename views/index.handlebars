<section>
  <button id="create"><a href="/create">Create a New Burger!</a></button>

  <h1>Burgers Ready to Eat</h1>

  <div class="burgerList">
    {{#each burgers}}
    {{#unless devoured}}
    {{> partials devoured=true}}
    {{/unless}}
    {{/each}}
  </div>

</section>

<section>
  <h1>Burgers Eaten</h1>

  <div class="burgerList">
    {{#each burgers}}
    {{#if devoured}}
    {{> partials devoured=false}}
    {{/if}}
    {{/each}}
  </div>

</section>